{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "env": {
    "DATABASE_URL": "@database_url",
    "BREVO_API_KEY": "@brevo_api_key", 
    "MAILERLITE_API_KEY": "@mailerlite_api_key",
    "SESSION_SECRET": "@session_secret"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@database_url",
      "BREVO_API_KEY": "@brevo_api_key",
      "MAILERLITE_API_KEY": "@mailerlite_api_key", 
      "SESSION_SECRET": "@session_secret"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}